cmake_minimum_required(VERSION 3.6)

project(ctrl-utils-download NONE)

include(ExternalProject)
ExternalProject_Add(ctrlutils
    # Directories
    PREFIX ${CMAKE_BINARY_DIR}/ctrl-utils
    SOURCE_DIR ${FRANKA_PANDA_EXT_DIR}/ctrl-utils.git
    BINARY_DIR ${CMAKE_BINARY_DIR}/ctrl-utils/build
    # Download
    GIT_REPOSITORY https://github.com/tmigimatsu/ctrl-utils.git
    # Configure
    CMAKE_ARGS -DBUILD_TESTING=OFF
    # Install
    INSTALL_COMMAND ""
)
