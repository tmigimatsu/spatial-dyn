cmake_minimum_required(VERSION 3.6)

project(ctrl_utils-download NONE)

include(ExternalProject)
ExternalProject_Add(ctrlutils
    # Directories
    PREFIX ${CMAKE_BINARY_DIR}/ctrl_utils
    SOURCE_DIR ${SPATIAL_DYN_EXT_DIR}/ctrl-utils.git
    BINARY_DIR ${CMAKE_BINARY_DIR}/ctrl_utils/build
    # Download
    GIT_REPOSITORY https://github.com/tmigimatsu/ctrl-utils.git
    # Install
    INSTALL_COMMAND ""
)
